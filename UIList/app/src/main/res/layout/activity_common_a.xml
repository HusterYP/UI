<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lifecycle.activity.CommonAActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bt_start_b"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="This is Activity A"
        android:textSize="30sp" />

    <Button
        android:id="@+id/bt_start_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="startB"
        android:text="StartActivity B"
        android:textAllCaps="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_start_b"
        android:layout_centerHorizontal="true"
        android:onClick="startA"
        android:text="StartActivity A"
        android:textAllCaps="false" />

</RelativeLayout>